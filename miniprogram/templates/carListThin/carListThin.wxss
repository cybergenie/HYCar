/* miniprogram/templates/carlist-thin/carlist-thin.wxss */
.car-list-group{
    width: 100%;
    height: 208rpx;
    display: flex;
    align-items: center;
    padding: 32rpx 0rpx 24rpx;
    border-bottom: 1px solid #f5f5f5;
   
}
.car-img{    
    width: 192rpx;
    height: 144rpx; 
    flex: initial;
    padding-right: 20rpx;
    
}

.car-info{
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content:space-between;
    word-break: break-all;
    
}
.car-name{
    height: 76rpx;
    font-size: 30rpx; 
    color: #333333;
    
}
.car-detail{
    padding: 5rpx 0rpx;
    font-size: small;
    color: #999999;
}
.sale-price{
    font-size: small;
    color: #e30000;  
}