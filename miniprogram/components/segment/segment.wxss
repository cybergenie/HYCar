.segment-group{
  width: 100%;
}

.segment-header{
  width: 100%;
  height: 88rpx; 
  display: flex;   
 
}

.segment-item{
  flex: 1;  
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #333333;  
}


.segment-header .active{  
  color: #e30000;
  border-bottom: 2px solid #e30000;
}

.segment-body{
  width: 100%;

  display: flex;   
  flex-wrap: wrap;
}