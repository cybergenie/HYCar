.segment-group{
  width: 100%;
}

.segment-header{
  width: 100%;
  height: 50rpx;
  border: 1px solid #e4e4e4;
  border-radius: 10px;
  display: flex;
}

.segment-item{
  flex: 1;
  border-right: 1px solid #e4e4e4;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.segment-item:last-of-type{
  border: none;
}

.segment-header .active{
  background: #1AAD16;
  color: #fff;
}

.segment-body{
  width: 100%;
}