/* components/searchcarmodule/searchcarmodule.wxss */
.car-list-group{
    width: 100%;
    height: 208rpx;
    display: flex;
    align-items: center;
    padding: 32rpx 0rpx 24rpx;
    border-bottom: 1px solid #f5f5f5;
   
}
.car-img{    
    width: 192rpx;
    height: 144rpx; 
    flex: initial;
    padding-right: 20rpx;
    
}

.car-info{
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content:space-between;
    word-break: break-all;
    
}
.car-name-thin{    
    font-size: 30rpx; 
    color: #333333;
    
}
.car-detail-thin{
    padding: 5rpx 0rpx;
    font-size: small;
    color: #999999;
}
.sale-price-group{
    display: flex;
    align-items:baseline
}
.sale-price{
    font-size: small;
    color: #e30000;  
}
.guide-price{
    font-size: x-small;
    color: #999999;
    text-decoration: line-through;
    padding: 0rpx 20rpx; 
}
.buy-group{
    margin: 0rpx 40rpx;
  }
.main-scroll{
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 1;
  }