page{
    background-color: #f2f2f2;
  }

  .image-slider{
      width: 750rpx;
      height: 500rpx;
  }
  .swiper-container{
      width: 100%;
      height: 100%;
  }
  .titleContainer{
      width: 100%;
      background-color: white;
  }
  .titleContent{
      padding: 34rpx 32rpx 20rpx 32rpx;
  }
  .carName{
      font-size: large;
      font-weight: 700;
      color: #1a1a1a;
      line-height: 48rpx;
  }
  .carDetail{
      font-size: small;
      color: #1a1a1a;
      line-height: 24rpx;
      margin: 20rpx 0;
      align-items: center;
  }
  .carPrice{
      font-size: large;
      color: #ff571a;
      line-height: 36rpx;
      margin: 40rpx 0 20rpx 0;
  }
  .newCarPrice{
      color: #999999;
      margin: 20rpx 0;
      line-height: 24rpx;
      font-size: small;
  }
  .btnStyle{
      float: right;
      margin-top: -58rpx;
      position: relative;
      line-height: 48rpx;
      text-align: center;
  }
  .priceNofication{
      color: #191919;
      font-size: small;
      background-color: white;
      padding: 0 16rpx;
