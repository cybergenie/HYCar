      padding: 32rpx 0;
  }
  .loanTitle{
      display: flex;
      align-items: center;
      font-size: medium;
      color: #1a1a1a;
      line-height: 40rpx;
  }
  .loanImg{
      height: 40rpx;
      width: 40rpx;
      margin-right: 16rpx;
  }
  .loanAdd{
      display: flex;
      align-items: center;
  }
  .planes{
      color: #666666;
      font-size: small;
  }
  .loanArrowBox{
      width: 15rpx;
      height: 26rpx;
      display: block;
      margin-left: 20rpx;
  }
  .connectContainer{
      width: 750rpx;
      background-color: #fff;
  }
  .contactContentBox{
      position: relative;
      padding: 34rpx 0 0 32rpx;
  }
  .connectTitle{
      width: 448rpx;
      font-size: 32rpx;
      color: #1a1a1a;
      line-height: 44rpx;
  }
  .toShopIndex{
      position: absolute;
      top: 44rpx;
      right: 63rpx;
      font-size: 24rpx;
      color: #1a1a1a;
  }
  .toShopIndex_arrowIcon{
      position: absolute;
      top: 0;
      right: -30rpx;
      height: 26rpx;
      width: 15rpx;
  }
  .contactInfo{
      display: flex;
      margin-top: 24rpx;
      margin-bottom: 40rpx;
      font-size: 24rpx;
      line-height: 24rpx;
      align-items: center;
      align-content: center;
      color: #999;
  }
  .connectContent{
      list-style: none;
      margin: 0;
      padding: 0;
      font-size: 27.6rpx;
      color: #666;
  }
  .li-item-a{
      color: #1a1a1a;
      text-decoration: none;
      padding: 28rpx 32rpx 28rpx 0;
      display: flex;
      justify-content: space-between;
      align-content: center;
      align-items: center;
      position: relative;
      border: none;
  }
  .address{
      line-height: 32rpx;
      width: 544rpx;
  }
.li-icon{
    width: 32rpx;
    height: 32rpx;
}
.floorTabContainer{
