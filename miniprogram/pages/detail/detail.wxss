      border: 1px solid #999999;
  }
  .couponContainer{
      margin-left: 32rpx;
      padding-right: 32rpx;
      height: 88rpx;
      display: flex;
      align-items: center;
      position: relative;
      border: none;
  }
  .couponLabel{
      padding-right: 24rpx;
      font-size: small;
      line-height: 24rpx;
      color: #1a1a1a;
  }
  .couponContent{
      flex: 1;
      display: flex;
      flex-wrap: wrap;
      overflow: hidden;
      margin: 30rpx 0;
      height: 28rpx;
      width: 614rpx;
  }
  .couponBox{
      display: flex;
      margin-right: 16rpx;
  }
  .couponImg{
      width: 8rpx;
      height: 28rpx;
      border: none;
  }
  .couponInfo{
      background-color: #ff571a;
      color: white;
      height: 28rpx;
      line-height: 28rpx;
      font-size: smaller;
  }
  .arrowBox{
      height: 100%;
      display: flex;
      align-items: center;
      position: absolute;
      top: 1rpx;
      right: 32rpx;
  }
  .arrowRight{
      width: 15rpx;
      height: 26rpx;
  }
  .loanContainer{
      background-color: white;
      margin-top: 24rpx;
  }
