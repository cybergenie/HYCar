@import "../templates/carListMain/carlistmain.wxss";
part{
  background-color: #f5f5f5;
}
.title-group{
  height: 120rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  font-size: large;
  font-weight: bolder;
}
.bannerImage-group{
  height: 320rpx;
  width: 100%;
}

.bannerImage{
  height: 100%;
  width: 100%;
}
.onsale-group{
  margin: 0rpx 40rpx;
}
.onsale-header{
  height: 150rpx;
  font-size: x-large;
  color: #0f111a;
  display: flex;
  justify-content: center;
  align-items: center;
}

.onsale-list{
  
}

.onsale-more{  
  height: 88rpx;
  margin: 32rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;
  background-color: #e30000;
  color: white;

}

.swiper-group{
  width: 100%;
  height: 350rpx;
  background-color: #f5f5f5;
  padding: 30rpx 0rpx; 
}

.swiper-box{
  width: 100%;
  height: 100%;
  display: inline-block;
}

.car-module-list{
  width: 187.5rpx; 
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0rpx;
}
.car-module{
  width: 116rpx;
  height: 130rpx;
}

.car-price-list{
  display: flex;
  flex-wrap: wrap;
  padding: 50rpx 32rpx;

}

.car-price-group{
  width: 171.5rpx;
  padding: 30rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}
.car-price{
  width: 116rpx;
  height: 130rpx;   
}

.car-hotBrands-list{
  width: 100%;  
  display: flex; 
  padding: 30rpx 0rpx; 
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #666666;
}
.car-hotBrand-group{
  width: 187.5rpx;
  height: 83rpx;
  display: flex;
  padding: 24rpx 0rpx;
  align-items: center;
  flex-direction: column;
}

.brands-more{  
  width: 100%;
  height: 88rpx;
  margin: 32rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;
  background-color: #e30000;
  color: white;
}

.shop-module-group{  
  font-size: x-large;
  color: #0f111a;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #f5f5f5;
  padding: 30rpx 0rpx;
}
.shop-module-header{  
  width: 100%;
  font-size: x-large;
  background-color: white;
  color: #0f111a;
  display: flex;
  justify-content: center;
  padding: 48rpx 0rpx;
}
.shop-module-body{
  width: 100%;
  height: 202rpx;
  background-image: url('//img.souche.com/20160727/png/591f2a77d3cb3b10cc90472b24d364dd.png') ;
  background-position-x: 50%;
  background-position-y: 50%;
  background-repeat: no-repeat; 
  background-size: contain;
  background-color: white;
  box-sizing: border-box; 
  display: block;
  margin-bottom: 32rpx;
  padding-left: 32rpx;

}
.shop-info-address{
  width: 100%;
  height: 200rpx;
  padding: 32rpx 240rpx 32rpx 0rpx;
  background-color: white;
  
  background-size: 500rpx 200rpx;
  background-repeat: no-repeat;  
}
.city-name{
  background-color:#999999;
  font-size: x-small;
  width:64rpx;
  height:32rpx;
  color:white;
  display: flex;
}
