/* miniprogram/pages/main/main.wxss */
@import "../../templates/carListMain/carListMain.wxss";

.title-group{
  height: 120rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  font-size: large;
  font-weight: bolder;
}
.bannerImage-group{
  height: 320rpx;
  width: 100%;
}

.bannerImage{
  height: 100%;
  width: 100%;
}
.onsale-group{
  margin: 0rpx 40rpx;
}
.onsale-header{
  height: 150rpx;
  font-size: x-large;
  display: flex;
  justify-content: center;
  align-items: center;
}

.onsale-list{
  
}

.onsale-more{  
  height: 88rpx;
  margin: 32rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;
  background-color: #e30000;
  color: white;

}

.swiper-group{
  width: 100%;
  height: 340rpx;
  padding: 30rpx 0rpx 0rpx 0rpx; 
}

.swiper-box{
  width: 100%;
  height: 100%;
  display: inline-block;
}

.car-module-list{
  width: 187.5rpx;
  padding: 30rpx 0rpx;
  flex: content;
}
.car-module{
  width: 116rpx;
  height: 130rpx;
}

.car-price-list{
  width: 187.5rpx;
  padding: 30rpx 0rpx;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #666666;
}
.car-price{
  width: 116rpx;
  height: 130rpx;   
}

.car-hotBrands-list{
  width: 187.5rpx;
  padding: 30rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}
.car-hotBrand{
  width: 116rpx;  
  display: flex;
  flex-direction: row;
}
