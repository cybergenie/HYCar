<!-- miniprogram/pages/main/main.wxml -->
<import src="/miniprogram/pages/templates/carListMain/carlistmain.wxml" />
<view class="title-group">
	<image class="title" src="./images/title.png" style="width:144rpx;height:72rpx;margin:0rpx 24rpx" />
	<view style="padding-left:20rpx">万鑫名车</view>
</view>
<view class="bannerImage-group">
	<image class="bannerImage" src="./images/bannerImage.jpg" />
</view>
<searchbar ismain="true" bindonClickSubmit="onClickSearchSubmit"></searchbar>
<view class="onsale-group">
	<view class="onsale-header">在售车型</view>
	<view wx:for="{{carList}}" wx:key="id" class="onsale-list">
		<template is="carlist-main" data="{{...item}}"></template>
	</view>
</view>
<block>
	<navigator class="onsale-more" url="">查看更多车辆></navigator>
</block>
<view class="swiper-group">
<swiper class="swiper-box" indicator-dots="{{true}}" autoplay="{{true}}" indicator-active-color="#007aff">
	<block wx:for="{{swiperImgUrls}}" wx:key="index">
		<swiper-item>
			<image src="{{item}}" style="width:100%"/>
		</swiper-item>
	</block>
</swiper>
</view>

	<segment items="{{segmentItems}}" defaultIndex="0" binditemchanged="onSegmentItemChanged">
  		<view slot="0" class='car-hotBrands-list' >	
			<view class="car-hotBrand-group" wx:for="{{carHotBrands}}" wx:key="index" wx:if="{{index<8}}">	
				<image  src="{{item.url}}" style="width:74.5rpx;height:56rpx"/>
				<view >{{item.name}}</view>	
			</view>
			
				<navigator class="brands-more" url="">更多品牌></navigator>
			
		</view>
  		<view slot="1" class='car-price-list'>
			  <view class="car-price-group"  wx:for="{{carPriceList}}" wx:key="index">
			  	<block class="car-price">{{item}}</block>
			  </view>
		  </view>
  		<view slot="2" class='car-module-list' wx:for="{{carModuleList}}" wx:key="index">
		  <image class="car-module" src="{{item.url}}"/>
		</view>
	</segment>
	<view class="shop-module-group">
		<view style="padding-bottom:2rpx">
			<view class="shop-module-header">门店信息</view>
			<view class="shop-module-body">
				<view class="shop-container">
					<view class="shop-info-container">
						<block class="shop-city">长春</block> 
						万鑫名车
					</view>
					<view class="shop-operation-container"></view>
				</view>
			</view>
		</view>
	</view>