/* components/carlistmodule/carlistmodule.wxss */
.carlist_moudle_group{
    position: relative;
    padding-bottom: 2rpx;
}
.title-center{
    box-sizing: border-box;
    padding: 48rpx 0;
    text-align: center;
    font-size: 52rpx;
    line-height: 52rpx;
    color: #0f111a;
}
.carlist_module__body{
    padding: 0 32rpx;
}
.car-item{
    box-sizing: border-box;
    padding: 32rpx 0 24rpx;
    width: 100%;
    border-bottom: 2rpx solid #e6e6e6;
    display: block;
    position: relative;
    text-decoration: none;
}
.car-photo-container{
    position: relative;
    float: left;
    width: 192rpx;
    height: 144rpx;
}
.car-photo{
    width: 192rpx;
    height: 144rpx;
}
.car-info{
    position: relative;
    top: -4rpx;
    box-sizing: border-box;
    padding-left: 208rpx;
    width: 100%;
}
.car-info-name{
    margin: 0;
    font-size: 30rpx;
    color: #333;
    height: 76rpx;
    overflow: hidden;
    line-height: 34rpx;
}
.car-info-summary-container{
    position: relative;
    line-height: 32rpx;
}
.car-info-summary{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: inline-block;
    color: #999;
    width: 100%;
    line-height: 24rpx;
}
.car-info-summary-text{
    font-size: 24rpx;
    color: #999;
    border-right: 2rpx solid #e6e6e6;
    padding: 0 4rpx;
}
.car-info-price-container{
    margin-top: 6rpx;
    font-size: 0;
    line-height: 10rpx;
}
.car-info-price{
    color: #e30000;
    white-space: nowrap;
    font-size: 28rpx;
    line-height: 38rpx;
}
.onsale-more{ 
    background-color: #e30000;
    margin: 32rpx;
    box-sizing: border-box;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
    text-align: center;
    color: #fff;
  }