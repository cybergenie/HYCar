/* miniprogram/pages/sell/sell.wxss */
page{
    background-color: #f2f2f2;
}
.sell-car{
    margin-top: 30rpx;
}
.moudle-sell-car{
    background-color: white;
    padding-bottom: 24rpx;
}
.sell-title{
    font-size: x-large;
    padding: 30rpx;
}
.sub-list{
    font-size:medium;
    overflow: hidden;
    position: relative;
}
.sub-list-item{
    color: #1a1a1a;
    padding: 0 32rpx;
    position: relative;
    display: flex;
    align-items: center;
}
.sub-list-hd{
    padding: 30rpx 0;
    width: 180rpx;
}
.sub-list-bd{
    padding: 20rpx 0;
    max-width: 192rpx;
    width: 100%;
    height: 60rpx;
    line-height: 40rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.onsale-more{  
    height: 88rpx;
    margin: 32rpx;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 5rpx;
    background-color: #e30000;
    color: white;
  
  }